<?xml version="1.0"?>

<project name="bindgen" default="jar" basedir=".">

	<target name="clean">
		<delete dir="bin"/>
	</target>

	<target name="compile">
		<mkdir dir="bin/main"/>
		<javac srcdir="src" destdir="bin/main" debug="true" nowarn="yes" source="1.6" target="1.6" encoding="utf8">
			<classpath>
				<pathelement path="lib/main/commons-lang-2.3.jar"/>
				<pathelement path="lib/main/exigence-utilities.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="annotations" depends="compile">
		<jar destfile="bin/annotations.jar">
			<fileset dir="bin/main" includes="**/Bindable.class"/>
			<fileset dir="bin/main" includes="**/Binding.class"/>
		</jar>
	</target>

	<target name="jar" depends="compile">
		<!--
		I'm not entirely sure using jarjar here is best practice. I would prefer
		bindgen.jar to be just one jar, but bringing in commons-lang and
		exigence-util into the same jar without rewriting seemed likely to cause
		jar hell confusion. So we'll go with this for now.
		-->
		<taskdef name="jarjar" classname="com.tonicsystems.jarjar.JarJarTask" classpath="lib/build/jarjar-1.0.jar"/>
		<jarjar destfile="bin/bindgen.jar">
			<fileset dir="bin/main" includes="**/*.class"/>
			<fileset dir="src" includes="**/*" excludes="**/*.class"/>
			<zipfileset dir="META-INF" includes="**/*" prefix="META-INF"/>
			<zipfileset src="lib/main/commons-lang-2.3.jar"/>
			<zipfileset src="lib/main/exigence-utilities.jar"/>
			<rule pattern="org.apache.**" result="org.exigencecorp.bindgendependencies.org.apache.@1"/>
			<rule pattern="org.exigencecorp.util.**" result="org.exigencecorp.bindgendependencies.org.exigencecorp.util.@1"/>
			<rule pattern="org.exigencecorp.gen.**" result="org.exigencecorp.bindgendependencies.org.exigencecorp.gen.@1"/>
			<rule pattern="org.exigencecorp.jdbc.**" result="org.exigencecorp.bindgendependencies.org.exigencecorp.jdbc.@1"/>
			<rule pattern="org.exigencecorp.registry.**" result="org.exigencecorp.bindgendependencies.org.exigencecorp.registry.@1"/>
		</jarjar>
		<zip destfile="bin/bindgen.zip">
			<fileset dir="src" includes="**/*.java"/>
		</zip>
		<mkdir dir="${user.home}/.bd"/>
		<copy todir="${user.home}/.bd" file="bin/bindgen.jar"/>
		<copy todir="${user.home}/.bd" file="bin/bindgen.zip"/>
	</target>

</project>

