<?xml version="1.0"?>

<project name="bindgen" default="jar" basedir=".">

	<target name="clean">
		<delete dir="bin"/>
	</target>

	<target name="compile">
		<mkdir dir="bin/main"/>
		<javac srcdir="src" destdir="bin/main" debug="true" nowarn="yes" source="1.6" target="1.6" encoding="utf8">
			<classpath>
				<fileset dir="lib/main" includes="**/*.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="annotations" depends="compile">
		<jar destfile="bin/annotations.jar">
			<fileset dir="bin/main" includes="**/Bindable.class"/>
			<fileset dir="bin/main" includes="**/Binding.class"/>
			<fileset dir="bin/main" includes="**/NamedBinding.class"/>
		</jar>
		<copy file="bin/annotations.jar" todir="../examples/lib"/>
	</target>

	<target name="jar" depends="compile">
		<!--
		I'm not entirely sure using jarjar here is best practice. Eclipse
		requires bindgen.jar to be just one jar, and bringing in exigence-util
		without rewriting seemed likely to cause jar hell confusion. So we'll go
		with this for now.
		-->
		<taskdef name="jarjar" classname="com.tonicsystems.jarjar.JarJarTask" classpath="lib/build/jarjar-1.0.jar"/>
		<jarjar destfile="bin/bindgen.jar">
			<fileset dir="bin/main" includes="**/*.class"/>
			<zipfileset src="lib/main/exigence-utilities.jar" includes="org/exigencecorp/gen/**/*.class,org/exigencecorp/util/**/*.class"/>
			<zipfileset dir="META-INF" includes="**/*" prefix="META-INF"/>
			<rule pattern="org.exigencecorp.gen.*" result="org.exigencecorp.bindgen.dependencies.gen.Bindgen@1"/>
			<rule pattern="org.exigencecorp.util.*" result="org.exigencecorp.bindgen.dependencies.util.Bindgen@1"/>
		</jarjar>
		<zip destfile="bin/bindgen.zip">
			<fileset dir="src" includes="**/*.java"/>
		</zip>
		<mkdir dir="${user.home}/.bd"/>
		<copy todir="${user.home}/.bd" file="bin/bindgen.jar"/>
		<copy todir="${user.home}/.bd" file="bin/bindgen.zip"/>
	</target>

</project>

