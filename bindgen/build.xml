<?xml version="1.0"?>

<project name="bindgen" default="jar" basedir=".">

	<target name="clean">
		<delete dir="bin"/>
	</target>

	<target name="compile">
		<mkdir dir="bin/compile"/>
		<javac srcdir="src" destdir="bin/compile" debug="true" nowarn="yes" source="1.6" target="1.6" encoding="utf8">
			<classpath>
				<pathelement path="lib/commons-lang-2.3.jar"/>
				<pathelement path="lib/exigence-utilities.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="compile-example">
		<delete dir="bin/example"/>
		<mkdir dir="bin/example"/>
		<javac srcdir="src/example" destdir="bin/example" debug="true" nowarn="yes" source="1.6" target="1.6" encoding="utf8">
			<compilerarg value="-XprintRounds"/>
			<classpath>
				<pathelement path="bin/bindgen.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="annotations" depends="compile">
		<jar destfile="bin/annotations.jar">
			<fileset dir="bin/compile" includes="**/Bindable.class"/>
			<fileset dir="bin/compile" includes="**/Binding.class"/>
		</jar>
	</target>

	<target name="jar" depends="compile">
		<jar destfile="bin/bindgen.jar">
			<fileset dir="bin/compile" includes="**/*.class"/>
			<fileset dir="src" includes="**/*" excludes="**/*.class"/>
			<zipfileset dir="META-INF" includes="**/*" prefix="META-INF"/>
			<zipfileset src="lib/commons-lang-2.3.jar"/>
			<zipfileset src="lib/exigence-utilities.jar"/>
		</jar>
		<zip destfile="bin/bindgen.zip">
			<fileset dir="src" includes="**/*.java"/>
		</zip>
		<mkdir dir="${user.home}/.bd"/>
		<copy todir="${user.home}/.bd" file="bin/bindgen.jar"/>
		<copy todir="${user.home}/.bd" file="bin/bindgen.zip"/>
	</target>

</project>

